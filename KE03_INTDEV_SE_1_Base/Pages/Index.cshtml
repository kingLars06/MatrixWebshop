@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@* @section Styles { *@
@*     <link rel="stylesheet" href="../Properties/" /> *@
@* } *@

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="position-absolute" style="left:0;">
        <img src="../imgs/matrix-hero.jpg" class="" style="height: 80vh; width:100vw; display:block; object-fit: cover;" alt="Matrix Hero">
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
            <h1 class="display-4 fw-bold ">Welkom in de echte wereld</h1>
            <p class="lead">Ontsnap aan de Matrix – bestel je gear vandaag nog.</p>
            <a href="/Producten" class="btn btn-secondary btn-lg mt-3">Bekijk producten</a>
        </div>
    </div>
    <div style="height: 80vh">

    </div>
    <!-- Intro Section -->
    <div class="container py-5">
        <div class="text-center">
            <h2 class="fw-bold mb-3">Waarom onze webshop?</h2>
            <p class="text-muted">
                Onze producten zijn ontworpen voor de vrijdenkers, de rebellen, en iedereen die het systeem wil doorbreken.
                Ontdek krachtige tech, tools en meer uit de wereld van de Matrix.
            </p>
        </div>
    </div>

    <!-- Gallery Section -->
    <div class="container py-4">
        <div class="row g-4">
            <div class="col-md-4">
                <img src="../imgs/sfeer1.jpg" class="img-fluid rounded shadow-sm" alt="Matrix sfeer 1" style="object-fit:cover; height:100%;">
            </div>
            <div class="col-md-4 height-100">
                <img src="../imgs/sfeer2.jpg" class="img-fluid rounded shadow-sm" alt="Matrix sfeer 2" style="object-fit:cover; height:100%;">
            </div>
            <div class="col-md-4 height-100s">
                <img src="../imgs/sfeer3.webp" class="img-fluid rounded shadow-sm" alt="Matrix sfeer 3" style="object-fit:cover; height:100%;">
            </div>
        </div>
    </div>

    <!-- Call to Action Section -->
    <div class="bg-dark text-success text-center py-5">
        <h2 class="fw-bold">Klaar om de rode pil te nemen?</h2>
        <a href="/Producten" class="btn btn-outline-success btn-lg mt-3">Bekijk het aanbod</a>
    </div>
</div>


