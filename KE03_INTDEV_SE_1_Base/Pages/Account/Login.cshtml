@page
@model KE03_INTDEV_SE_1.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Inloggen";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4">Inloggen</h2>

        <form method="post">
            <div class="mb-3">
                <label asp-for="GebruikersNaam" class="form-label">Gebruikers naam</label>
                <input asp-for="GebruikersNaam" class="form-control" type="text" required />
                <span asp-validation-for="GebruikersNaam" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Wachtwoord" class="form-label">Wachtwoord</label>
                <input asp-for="Wachtwoord" class="form-control" type="password" required />
                <span asp-validation-for="Wachtwoord" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Inloggen</button>
            </div>
        </form>

        <div class="mt-3 text-center">
            <small>
                Geen account? <a asp-page="/Account/Aanmelden">Meld je aan</a>
            </small>
        </div>
    </div>
</div>