@page
@model KE03_INTDEV_SE_1.Pages.Account.OrdersModel
@{
    ViewData["Title"] = "Mijn Bestellingen";
}

<div class="container mt-5">
    <h1 class="mb-4">Bestelgeschiedenis van @Model.Gebruikersnaam</h1>

    @if (Model.Bestellingen.Count == 0)
    {
        <p>Je hebt nog geen bestellingen geplaatst.</p>
    }
    else
    {
        foreach (var bestelling in Model.Bestellingen)
        {
            <div class="card mb-4">
                <div class="card-header">
                    Bestelling #@bestelling.Id - @bestelling.OrderDate.ToString("dd-MM-yyyy HH:mm")
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var product in bestelling.Products)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @product.Name
                                <span class="badge bg-primary">@product.Price.ToString("C")</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    }
</div>
